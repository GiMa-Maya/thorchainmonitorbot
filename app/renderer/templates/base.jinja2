<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{{ title }}</title>
    <style>
        @font-face {
            font-family: ThorFont;
            src: url(renderer/static/ThorFont.ttf);
        }

        @font-face {
            font-family: ThorFontLight;
            src: url(renderer/static/Exo2-VariableFont_wght.ttf);
        }

        *,
        *::before,
        *::after {
            box-sizing: border-box;
        }

        /* Dynamically set the viewport size */
        html, body {
            margin: 0;
            padding: 0;
            font-family: ThorFontLight, sans-serif;
            font-weight: 300;

            overflow: hidden; /* Prevent scrollbars */
            position: fixed;
            width: {{ width }}px;
            height: {{ height }}px;
        {#background-color: #061913;#} background-color: #061913;
        }


        div {
        {% if debug %}
            outline: #083a34 1px dashed;
        {% endif %}
        }

        body {
            color: white;
            background-color: #0a1015;
        {% if debug %}
            outline: 1px darkcyan dashed;
        {% endif %}

        }

        h1 {
            color: #FFF;
        }

        p {
            font-size: 14px;
        }

        .highlight-blue {
            color: #00CCFF;
        }

        .yggdrasil-green {
            color: #33FF99;
        }

        .midgard-turqoise {
            color: #23DCC8;
        }

        .night-black {
            background-color: #0a1015;
        }

        .container {
            position: relative;
            margin: 0;
            padding: 0;
            width: 100vw;
            height: 100vh;
            border: 1px rgba(255, 255, 255, 0.01) dashed;
            display: block;
            max-width: {{ width }}px;
            max-height: {{ height }}px;
            overflow: hidden;
        }

        .title {
            letter-spacing: 0.15em;
            font-family: ThorFontLight, a;
            font-size: 43px;
            color: #c8c8c8;
            font-weight: normal;
        }

        .header-box {
            display: flex;
            align-items: center;
            padding: 20px;
            border-radius: 8px;
        }

        .logo {
            margin-left: 20px;
            width: 100px;
            height: auto;
            margin-right: 20px;
        }

        .shadow {
            filter: drop-shadow(1px 0px 0px black) drop-shadow(-1px 0px 0px black) drop-shadow(0px 1px 0px black) drop-shadow(0px -1px 0px black) drop-shadow(0 0 10px rgb(0, 0, 0, 0.5));
        }

        .break {
            flex-basis: 100%;
            height: 0;
        }

        footer {
            position: absolute;
            bottom: 0;
            width: 100%;
            text-align: right;
            padding: 5px 8px 5px 5px;
            font-size: 19px;
            color: #394151;
            font-style: italic;
        }

        .flex {
            display: flex;
        }

        .bg {
            background: url("renderer/static/bg2.svg") no-repeat;
            background-position: center -79px;

        }

    </style>
    <script src="renderer/static/chart.umd.min.js"></script>

</head>
<body class="">
<div class="container bg">

    {% block content %}
    {% endblock %}

    <footer>
        THORChain Infobot <span id="today-date"></span>
    </footer>

</div>

<script>
    const todayDate = document.querySelector('#today-date');
    const formatDate = (date) => {
        const pad = (num) => String(num).padStart(2, '0');

        const day = pad(date.getUTCDate());
        const month = pad(date.getUTCMonth() + 1); // Months are 0-based
        const year = date.getUTCFullYear();
        const hours = pad(date.getUTCHours());
        const minutes = pad(date.getUTCMinutes());

        return `${day}.${month}.${year} ${hours}:${minutes} UTC`;
    };
    todayDate.innerText = formatDate(new Date())

    {% if auto %}
        setInterval(function () {
            location.reload();
        }, 3000);
    {% endif %}
</script>

</body>
</html>
